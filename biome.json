{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "extends": ["ultracite/core"],
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "style": {
        "useFilenamingConvention": "off",
        "noNonNullAssertion": "off",
        "noNestedTernary": "off"
      },
      "nursery": {},
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "indentWidth": 4,
      "lineWidth": 100
    }
  }
}
